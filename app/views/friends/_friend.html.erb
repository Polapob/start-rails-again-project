<tr id="<%= dom_id friend %>">
  <td>
  <%= link_to "#{friend.first_name} #{friend.last_name}", friend  %>
  </td>
  <td>
    <%= friend.email %>
  </td>
  <td>
    <%= friend.phone %>
  </td>
  <td>
    <%= friend.twitter %>
  </td>
  <td>
  <%= friend.user_id %>
  </td>
  
  <td class = "flex-d flex-row justify-content-center align-items-center">
    <%= link_to "Edit", edit_friend_path(friend), class:"btn btn-secondary" %>
  </td>
  <td class="">
    <%= button_to "Delete", friend, method: :delete ,class:"btn btn-danger" %>
  </td>
</tr>
